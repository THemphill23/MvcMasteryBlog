@model IEnumerable<MvcMasteryBlog.Models.Blog>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Vehicle Reviews</title>
    <link rel="stylesheet" href="~/Styles/Style.css" />

</head>
<body>
    <h1>Blog</h1>
    <div>

        <section id="Blog">
            @foreach (var blog in Model)
            {

                <article>
                    <p><a href="/Blog/Details/@blog.ID">@blog.Title</a></p>
                    <img src="@blog.Image" alt="@blog.Title" style=" height: 240px; width:380px;" />
                </article>
                <form action="/Blog/Edit/@blog.ID" method="get">
                    <input type="submit" value="Edit Review" />
                </form>

                <form action="/Blog/Delete/@blog.ID" method="get">
                    <input type="submit" value="Delete Review" />
                </form>
            }
        </section>
        <hr />
        <section id="Forms">
            <form action="/Blog/Create/@Model.First().ID" method="get">
                <input type="submit" value="Add Blog" /> <br>
            </form>

        </section>
    </div>
    <footer><h6>&copy;Nobody Cares Inc. 2019</h6></footer>
</body>
</html>
